@{
    ViewData["Title"] = "Index";
}

@model List<UsersViewModel>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var models in Model)
                        {
                            <tr>
                                <td>@models.User.UserName</td>
                                <td>@string.Join(", ", models.Roles)</td>
                                @if (models.User.IsActive)
                                {
                                    <td class="text-success">Active</td>
                                }
                                else
                                {
                                    <td class="text-danger">Deactive</td>
                                }

                                <td>

                                    <a class="btn btn-primary" asp-action="UserUpdateRole" asp-route-id="@models.User.UserName">Update the Role of User</a>


                                    @if (models.User.IsActive)
                                    {
                                        <a class="btn btn-danger" asp-action="Deactive" asp-route-id="@models.User.UserName">Deactive User</a>

                                    }
                                    else
                                    {
                                        <a class="btn btn-warning" asp-action="Deactive" asp-route-id="@models.User.UserName">Activate User</a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

